Context("Numeric");


#given
$x1 = random(-5, 5, 1); $y1 = random(-5, 5, 1); $z1 = random(-5, 5, 1);
$x2 = $x1 + 2; $y2 = $y1 + 5; $z2 = $z1 + 14;
$R1 = random(10, 14, 0.1);
$R2 = random(8, 12, 0.1);
$rho_disp = random(1, 5, 0.1);
$rho = $rho_disp/10**9; #nC/m3
$eps0 = 8.854187817/(10**12);

#computation 
$Ex=$rho/(3*$eps0)*($x2-$x1);
$Ey=$rho/(3*$eps0)*($y2-$y1);
$Ez=$rho/(3*$eps0)*($z2-$z1);

#set tolerance
Context()->flags->set(
tolerance=>.01,
);

