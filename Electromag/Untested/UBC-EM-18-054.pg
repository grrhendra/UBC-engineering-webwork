#
#  Setup
#
#

Context("Numeric");

#given
$N = random(200, 500, 50);#
$rho1 = random(15, 25, 1);# cm
$rho2 = $rho1 + 2;# cm
$a = random(1, 3, 0.5);# cm
$I1 = random(0.5, 1.5, 0.1);#A
$I2 = random(0.5, 1.5, 0.1);# A

$mu0 = 4*pi;
#computation 
$m = $mu0*$N*$a/2/pi*log($rho2/$rho1)/1000;

#set tolerance
Context()->flags->set(
tolerance=>.01,
);

