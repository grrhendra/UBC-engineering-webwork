Context("Numeric");

#given
$I1 = random(1, 8, 0.1);# A
$I2 = random(1, 8, 0.1);# A
$a = random(0.3, 1.5, 0.1);# m
$b = $a + 0.1;# m
$theta = random(10, 80, 5);#
$thetar = $theta*pi/180;

$mu0 = 4*pi;

#computation 
$t = 2*$mu0*$I1*$I2*$a**2*$b*($a**2 + $b**2)*sin($thetar)/(pi*(($a**2+$b**2)**2 - 4*$a**2*$b**2*cos($thetar)**2))/10;


#set tolerance
Context()->flags->set(
tolerance=>.01,
);

