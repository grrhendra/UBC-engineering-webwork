Context("Numeric");


#given
$a = random(0.01, 0.03, 0.005);# m
$b = random(0.1, 0.15, 0.005);# m
$c = random(0.06, 0.09, 0.005);# m
$Q = random(1, 5, 0.5);# mC
$epsr = random(1.6, 2.2, 0.1);

$eps0 = 8.854187817;

#computation 
$w = $Q**2*($b-$c)/(8*pi*$eps0*$epsr*$b*$c)*1000;

#set tolerance
Context()->flags->set(
tolerance=>.01,
);

