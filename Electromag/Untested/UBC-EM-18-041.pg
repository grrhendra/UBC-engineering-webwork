#
#  Setup
#
#

Context("Numeric");


#given
$I = random(1,9,.5);
$a = random(.01,.08,.01);
$b = random(.1,.05,.1);
$c = $b + .2;
$pr = $b + .1;

$mu0 = 4*pi/10**7;

#computation 
$A = (($mu0*$I)/(4*pi*($c**2-$b**2))*($pr**2-$b**2) + ($mu0*$I*$c*$c)/(2*pi*($c**2-$b**2))*log($b/$pr))*10**7;

#set tolerance
Context()->flags->set(
tolerance=>.01,
);

