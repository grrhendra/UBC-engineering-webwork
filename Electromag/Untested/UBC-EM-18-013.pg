Context("Numeric");


#given
$R = random(1, 5, 0.5); #m
$a = $R + 1;
$rhoL = random(1, 10, 0.5);

#computation 
$Q = -1*pi*$rhoL*$R*($a**2 + $a**2)**(1.5)/($R**2+$a**2)**1.5;

#set tolerance
Context()->flags->set(
tolerance=>.01,
);

