Context("Numeric");

#image scale
$imgScale = .4;

#image aspect ratio
$width = $imgScale*1013;
$height = $imgScale*591;

#given
$a_disp = random(1,4,.1);
$b_disp = random(6,15,.1);
$a = $a_disp/1000;
$b = $b_disp/1000;
$c_disp = ($a_disp + $b_disp)/2;
$c = $c_disp/1000;
$e1 = random(2.2,2.6,.01);
$e2 = random(2.7,3.2,.01);
$s1 = random(3,4,.1);
$s2 = random(1,2,.1);
$Vo = random(10,20,1);

$eps0 = 8.854187817/(10**12);

#computation 
$Ans = $Vo*$eps0*($e2/$s2-$e1/$s1)/(1/$s1*log($c/$a) + 1/$s2*log($b/$c))*(10**9)/$c;

#set tolerance
Context()->flags->set(
tolerance=>.01,
);

