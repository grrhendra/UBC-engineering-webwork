Context("Numeric");


#given
$r = random(0.05, 1.5, 0.05);
$N = random(5,20,1);
$e = 2.7182818284590452353;

#computation 
$I = 2*$N*pi*$r*$r/$e;

#set tolerance
Context()->flags->set(
tolerance=>.01,
);

