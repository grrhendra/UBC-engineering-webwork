##############################################################
#
#  Setup
#
#

Context("Numeric");
#given
$is = random(4,8,.1);
$vs = random(20,28,.5);


#image scale
$imgScale =0.4;

#image aspect ratio
$width = $imgScale*958;
$height = $imgScale*532;

#computation 
$v01 = -$vs * 8/(8+16+12);
$i02 = $is*12/(16+8+12);
$v02 = $i02*8;
$v0 = $v02+$v01;

#set tolerance
Context()->flags->set(
tolerance=>.01);

##############################################################
#
#  PGML 
#
#

BEGIN_PGML

	[@ image( "UBC-CIR-17-013.png", width=>[$width], height=>[$height]) @]*

	Use the principle of superposition and find [`V_0`] in the following network when [`I_s=[$is]`] [`mA`] and [`V_s=[$vs]`] [`V_s`].

	[`V_0=`] [_____]{"$v0"} [`V`]  

END_PGML

