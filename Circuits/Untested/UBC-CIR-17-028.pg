	#"PGcourse.pl", 	 # Customization file for the course
   	);

##############################################################
#
#  Setup
#
#

Context("Complex");
#given
$r1 = random(1,10,.1);
$r2 = random(1,10,.1);


#image scale
$imgScale =0.4;

#image aspect ratio
$width = $imgScale*1104;
$height = $imgScale*720;

#computation 
$z1 = $r1*$r2/($r1+$r2);
$z2 = 4+2*i;
$z3 = 2-2*i;
$z4 = 2+2*i;

$z5 = 1/(1/$z2 + 1/$z3 + 1/$z4);
$zeq = $z5 + $z1;

#set tolerance
Context()->flags->set(
tolerance=>.01);

##############################################################
#
#  PGML 
#
#

BEGIN_PGML

	[@ image( "UBC-CIR-17-028.png", width=>[$width], height=>[$height]) @]*

	Find the impedance of the following network if [`r_1=[$r1]`] [`\Omega`] and [`r_2=[$r2]`] [`\Omega`];

	[`z_{EQ}=`] [_____]{"$zeq"} 

END_PGML

