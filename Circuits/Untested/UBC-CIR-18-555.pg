Context("Complex");

#given
$rd = random(10000,20000,1000);
$rs = random(1000,9000,1000);

#computation 
$id = (3*$rs-14.9071198499*sqrt(9*$rs+500)+333.33333333)/$rs**2;
$ro = 50/$id;
$vs = $id*$rs;
$gm = 0.003*(5-$vs-2);
$gain = -$gm*1000*$ro*$rd/($ro*$rd+1000*($ro+$rd))*3333.33333333/3383.333333;

#set tolerance
Context()->flags->set(
tolerance=>.02,
);

