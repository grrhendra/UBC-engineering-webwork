Context("Complex");

#given
$rs = random(50, 500, 50);
$rl = random(1000, 10000, 1000);

#computation 
$rbb = 44000*58000/(44000+58000);
$rpi2 = 100/0.0404;
$rb = $rbb*$rpi2/($rbb+$rpi2);
$gain = Formula("$rb/($rs+$rb)*(0.04*(8000*$rl)/(8000+$rl))");

#set tolerance
Context()->flags->set(
tolerance=>.01,
);

