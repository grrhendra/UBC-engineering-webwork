##############################################################
#
#  Setup
#
#

Context("Numeric");
#given
$r1 = random(2,6,.1);
$r2 = random(6,10,.1);

#image scale
$imgScale =0.4;

#image aspect ratio
$width = $imgScale*896;
$height = $imgScale*637;

#computation 
$i2 = 3/(3+$r1+$r2)*4;
$vAB = $i2*$r1;

#set tolerance
Context()->flags->set(
tolerance=>.01);

##############################################################
#
#  PGML 
#
#

BEGIN_PGML

	[@ image( "UBC-CIR-17-014.png", width=>[$width], height=>[$height]) @]*

	Use the source transformation method to determine [`V_{AB}`] in the following circuit if [`R_1=[$r1]`] [`k\Omega`] and [`R_2=[$r2]`] [`k\Omega`].

	[`V_{AB}=`] [_____]{"$vAB"} [`V`]  

END_PGML

