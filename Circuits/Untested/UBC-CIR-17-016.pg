##############################################################
#
#  Setup
#
#

Context("Numeric");
#given
$vs = random(12,36,.5);


#image scale
$imgScale =0.4;

#image aspect ratio
$width = $imgScale*1063;
$height = $imgScale*532;

#computation 
$iSC = $vs/6 - 2;
$rN = 1/(1/6+1/12);
$iAB = $iSC*$rN/($rN+4);

#set tolerance
Context()->flags->set(
tolerance=>.01);

##############################################################
#
#  PGML 
#
#

BEGIN_PGML

	[@ image( "UBC-CIR-17-016.png", width=>[$width], height=>[$height]) @]*

	If [`V_s=[$vs]`] [`V`], calculate the current passing through the [`4`] [`k\Omega`] resistor by using Norton's Theorem.

	[`I_{AB}=`] [_____]{"$iAB"} [`mA`]  

END_PGML

