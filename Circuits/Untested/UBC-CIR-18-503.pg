Context("Numeric");

#given
$resistance = random(2,5,1);
$voltage = random(4, 10, 2);

#computation 
$current_a = (($resistance)**3 + 15*($resistance)**2 - 2*$resistance*$voltage + 8*$resistance - $voltage)/(($resistance)**2+$resistance);

#set tolerance
Context()->flags->set(
tolerance=>.02,
);

