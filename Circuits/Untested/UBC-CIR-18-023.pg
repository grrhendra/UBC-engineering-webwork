##############################################################
#
#  Setup
#
#

Context("Matrix");

#given
$z_1_11 = 24;
$z_1_12 = random(4, 16, 1);
$z_1_21 = -$z_1_12;
$z_1_22 = 0.25;
$z_2_11 = 0.4;
$z_2_12 = random(0.1, 0.9, 0.05);
$z_2_21 = -$z_2_12;
$z_2_22 = 2.5;

#computation 
$z_3_11 = ($z_1_12**2-$z_1_12*$z_2_12-$z_1_12+$z_2_12)*4/11+24.4;
$z_3_12 = ($z_1_12+0.1)*10/11;
$z_3_21 = (-$z_1_12-0.1*$z_2_12)*10/11;
$z_3_22 = 0.22727272727272;

$ansMat = Matrix("[[$z_3_11,$z_3_12],[$z_3_21,$z_3_22]]");

#set tolerance
Context()->flags->set(
tolerance=>.02,
);

##############################################################
#
#  Text 
#
#

BEGIN_PGML

If [`Z_1 = \begin{bmatrix}[$z_1_11] & [$z_1_12]\\[$z_1_21] & [$z_1_22]\end{bmatrix}`] [`\Omega`] and [`Z_2 = \begin{bmatrix}[$z_2_11] & [$z_2_12]\\[$z_2_21] & [$z_2_22]\end{bmatrix}`] [`\Omega`], solve for the impedance parameters of the combined two port network.

[@ image("UBC-CIR-18-023.png", width=>[$width], height=>[$height]) @]*

[`Z_3=`][@ $ansMat->ans_array @]*

END_PGML

ANS($ansMat->cmp);

