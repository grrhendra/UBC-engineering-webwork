DOCUMENT();

loadMacros(   
	"PGstandard.pl",     # Standard macros for PG language
	"MathObjects.pl",
	"PGML.pl",
	"parserPopUp.pl",
	"parserMultiAnswer.pl",
	"parserRadioButtons.pl",
	#"source.pl",        # allows code to be displayed on certain sites.
	#"PGcourse.pl", 	 # Customization file for the course
   	);

##############################################################
#
#  Setup
#
#

Context("Numeric");
#given
$vs = random(24,48,.5);


#image scale
$imgScale =0.4;

#image aspect ratio
$width = $imgScale*521;
$height = $imgScale*865;

#computation 
$vX = $vs/3;
$vOC = 2*$vX;
$iSC = 2*$vX/12;
$rTH = $vOC/$iSC;
$rA = $rTH;
$iA = $vOC/($rA*2);
$pA = ($iA**2)*$rA;

#set tolerance
Context()->flags->set(
tolerance=>.01);

##############################################################
#
#  PGML 
#
#

BEGIN_PGML

	[@ image( "UBC-CIR-17-017.png", width=>[$width], height=>[$height]) @]*

	Calculate the resistance of [`R_A`] for maximum power transfer and the amount power it absorbs at this state. Consider the source voltage [`V_s=[$vs]`] [`V`];

	[`R_A=`] [_____]{"$rA"} [`k\Omega`]  
	[`P_A=`] [_____]{"$pA"} [`mW`]  

END_PGML

