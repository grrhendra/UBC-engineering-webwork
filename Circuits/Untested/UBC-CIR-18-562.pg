##############################################################
#
#  Setup
#
#

Context("Complex");

#given
$rg1 = random(5000, 15000, 1000);
$rg2 = random(5000, 15000, 1000);

#computation 
$gain = Formula("1/$rg2/((1/$rg1-0.008)*(1/$rg1+1/$rg2)/(1/10000+1/400000+1/$rg1)-1/$rg1)");

#set tolerance
Context()->flags->set(
tolerance=>.02,
);

