Context("Numeric");

#given
$I1 = non_zero_random(-10,10,1);
  
do {
  $I2 = non_zero_random(-10,10,1);
  $I3 = non_zero_random(-10,10,1);
} until ($I2+$I3 != 0);

do {
  $I4 = non_zero_random(-10,10,1);
} until ($I3+$I4 != 0);


#computation 
$Vx = -25*(615*$I1-49*(21*$I2+$I3-20*$I4)) / 1151;

#set tolerance
Context()->flags->set(
tolerance=>.02,
);

