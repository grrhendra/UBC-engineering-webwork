   	);

##############################################################
#
#  Setup
#
#

Context("Numeric");
#given
$vs = random(12,36,.5);

#image scale
$imgScale =0.4;

#image aspect ratio
$width = $imgScale*917;
$height = $imgScale*740;

#computation 
$i2 = (48+$vs)/18;
$vTH = 8*4+6*$i2;
$rTH = 12;
$vAB = $vTH*4/(4+$rTH);

#set tolerance
Context()->flags->set(
tolerance=>.01);

##############################################################
#
#  PGML 
#
#

BEGIN_PGML

	[@ image( "UBC-CIR-17-015.png", width=>[$width], height=>[$height]) @]*

	By using Thevenin's Theorem, determine [`V_{AB}`] in the following circuit if [`V_s=[$vs]`] [`V`].

	[`V_{AB}=`] [_____]{"$vAB"} [`V`]  

END_PGML

