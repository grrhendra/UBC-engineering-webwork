#image scale
$imgScale = .18;

#image aspect ratio
$width = $imgScale*2704;
$height = $imgScale*1543;

loadMacros(   
	"PGstandard.pl",     # Standard macros for PG language
	"MathObjects.pl",
	"PGML.pl",
	"parserPopUp.pl",
	"parserMultiAnswer.pl",
	"parserRadioButtons.pl",
