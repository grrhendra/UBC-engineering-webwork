##############################################################
#
#  Setup
#
#

Context("Numeric");

#given
$g = 73;
$da = random(15,20,1);
$db = 38;
$la = 150;
$lb = random(300,400,1);
$tau = 42;
$maxangle = .55;

#computation 
$IA = pi/32 * $da**4;
$IB = pi/32 * $db**4;
$TA = $lb * $IA/($lb * $IA + $la * $IB);
$TB = $la * $IB/($lb * $IA + $la * $IB);
$ta = pi * $da**3 / 16 * $tau / $TA /1000;
$tb = pi * $db**3 / 16 * $tau / $TB /1000;

$t1 = $ta < $tb ? $ta : $tb;

$phia = $g * $IA /$TA / $la * $maxangle * pi/180;
$phib = $g * $IB /$TB / $lb * $maxangle * pi/180;

$t2 = $phia > $phib ? $phia : $phib;
#set tolerance
Context()->flags->set(
tolerance=>.05);

