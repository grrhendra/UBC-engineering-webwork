Context("Numeric");

#given
$q=random(1,10,1); 
$b=random(0.2,0.2,1); 
$l=random(1,0.2,2); 

#computation 
$m=-(-$q*($b+$l/2)*($l/2)+$q/2*($b+$l/2)**2);

#set tolerance
Context()->flags->set(
tolerance=>.05);

