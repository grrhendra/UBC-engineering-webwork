Context("Numeric");

#given
$L = random(1200,1300,10);
$d1 = 61;
$d2 = random(70,80,1);
$to = 10;
$g = 73;

#computation 
$x = $L *(1/2 + ($d1/$d2)**4/4);
$phimax = $to /2 * ($L - $x)/($g * pi * ($d2**4 - $d1**4)/32)*180/pi*1000;

#set tolerance
Context()->flags->set(
tolerance=>.05);

