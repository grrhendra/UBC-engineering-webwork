Context("Numeric");
#given
$sx = 22;
$sy = random(22,40,1);
$tau = 8;
$y = 24;

#image scale
$imgScale = .2;

#image aspect ratio
$width = $imgScale*959;
$height = $imgScale*1133;

#computation 
$c = ($sx + $sy)/2;
$r = sqrt(((($sx-$sy)/2)**2)+($tau**2));
$s1 = $c + $r;
$s2 = $c - $r;

$b = -($s1 + $s2);
$c = $s1 ** 2 + $s2 ** 2 - $y**2 - $s1*$s2;

$cmises = (-$b - sqrt($b**2 - 4*$c))/2;
$tmises = (-$b + sqrt($b**2 - 4*$c))/2;

$diff = $y - ($s1 - $s2);
$ctresca = $s2 - $diff;
$ttresca = $s1 + $diff;

#set tolerance
Context()->flags->set(
tolerance=>.05);

