##############################################################
#
#  Setup
#
#

Context("Numeric");

#given
$db = 12; $ab = 76.7;
$dc = 20; $ac = 173;
$dt = random(50,70,1);
$sf = random(3,5,.1);
$tballow = 102000/$sf;
$tcallow = 231000/$sf;
$e = 140;
$alpha = 12;

#computation 
$tmp = -$e *$alpha * $dt * $ab * $ac/1000;
$pb= ($tballow * (2 *$ac/$ab + 1/2)*4/5 - $tmp*4/5/$ab)/1000;
$pc= ($tcallow * (4 + $ab/$ac)/5 + $tmp/5/$ac)/1000;

$p = $pb < $pc ? $pb : $pc;

#set tolerance
Context()->flags->set(
tolerance=>.05);

