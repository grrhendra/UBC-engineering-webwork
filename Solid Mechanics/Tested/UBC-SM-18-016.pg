Context("Numeric");
#given
$l = 50;
$w = random(10,30,2);
$a = 25;
$b = 10;
$delta = random(2,10,1);
$g = 2;

#image scale
$imgScale = .25;

#image aspect ratio
$width = $imgScale*2300;
$height = $imgScale*1104;

#computation 
$gammaA =arctan($delta/($a*10));
$gammaB =arctan($delta/($b*10));
$tauA = $g*$gammaA;
$tauB = $g*$gammaB;
$area = $l*$w/10000;
$p = ($tauA+$tauB)*$area*1000;

#set tolerance
Context()->flags->set(
tolerance=>.05);

