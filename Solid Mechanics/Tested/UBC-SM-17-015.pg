TEXT(beginproblem());

##############################################################
#
#  Setup
#
#

Context("Numeric");
#given
$w1 = random(10,30,1);
$w2 = random(50,75,1);
$w3 = random(10,50,1);
$w4 = random(10,30,1);

#image scale
$imgScale =0.3;

#image aspect ratio
$width = $imgScale*2544;
$height = $imgScale*778;

#computation 
$q = (2*$w2 + $w3 + 9*$w4 - 2*$w1)/7;
$p = 2*$w1 + $w2 + $w4 - $q;



#set tolerance
Context()->flags->set(
tolerance=>.05);

##############################################################
#
#  PGML 
#	
#

BEGIN_PGML

[@ image( "UBC-SM-17-015.png", width=>[$width], height=>[$height]) @]*

Find the reactions at supports [`P`] and [`Q`] for the beam shown in the figure given the following parmeters:
[`w_1=[$w1]`] [`kN/m`]  
[`w_2=[$w2]`] [`kN`]  
[`w_3=[$w3]`] [`kNm`]  
[`w_4=[$w4]`] [`kN`]  

[`P`] = [_____]{"$p"} [`kN`]  
[`Q`] = [_____]{"$q"} [`kN`]   

END_PGML

