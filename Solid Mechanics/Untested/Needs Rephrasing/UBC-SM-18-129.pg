Context("Numeric");

#given
$load = random(7,15,.1);
$chess = random(2,3,.1);
$balk = random(3,5,.1);
$bend = random(10,25,.1);
$q = $load * $chess/2;

#computation 
$bmin1 = (6/8* $q * $balk**2 / $bend)**(1/3)*100;
$bmin2 = (4/8* $q * $balk**2 / $bend)**(1/3)*100;

#set tolerance
Context()->flags->set(
tolerance=>.05);

