Context("Numeric");
#given
$load = random(800,1200,25);
$l = 2;
$lt = 5;
$do = 2;
$di = 1.5;

#image scale
$imgScale = .2;

#image aspect ratio
$width = $imgScale*2489;
$height = $imgScale*734;

#computation 
$ra = $l/$lt*$load;
$rc = ($l - $lt)/$lt*$load;

#set tolerance
Context()->flags->set(
tolerance=>.05);

