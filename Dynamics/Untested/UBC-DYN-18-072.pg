TEXT(beginproblem());

##############################################################
#
#  Setup
#
#

Context("Numeric");
#given
$wcd = random(2,4,.1);
$thetad = random(30,60,1);
$l = random(1.5,2.5,.1);
$theta = $thetad*pi/180;

#computation
$vcj = -sin($theta)*$l*$wcd;
$wab = $vcj/(-3);

#set tolerance
Context()->flags->set(
tolerance=>.01,
);

##############################################################
#
#  PGML 
#
#

BEGIN_PGML

