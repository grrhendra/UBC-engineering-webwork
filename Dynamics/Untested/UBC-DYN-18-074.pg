Context("Numeric");
#given
$l = random(6,10,.1);
$h = random(2,4,.1);
$t = random(.1,.2,.01);
$rho = random(5,10,.1);

#computation
$xc = $l/2;
$xg = $xc;
$yc = $h/2;
$yg = (3.6*$h**2/2 - 1.8*$h**3/3)/(3.6*$h - 1.8*$h**2/2);

$m = $rho*$l*$h*$t;
$izzg = 1/12*$m*($l**2+$h**2);
$izz = 3*($izzg + $m*($xc**2+$yc**2));

#set tolerance
Context()->flags->set(
tolerance=>.01,
);

