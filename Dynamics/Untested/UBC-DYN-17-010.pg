##############################################################

DOCUMENT();

loadMacros(   
	"PGstandard.pl",     # Standard macros for PG language
	"MathObjects.pl",
	"PGML.pl",
	"parserPopUp.pl",
	"parserMultiAnswer.pl",
	"parserRadioButtons.pl",
	#"source.pl",        # allows code to be displayed on certain sites.
	#"PGcourse.pl", 	 # Customization file for the course
   	);

##############################################################
#
#  Setup
#
#

Context("Numeric");
#given
$vB = random(1,3,.1);
$alpha = random(20,30,1);
$alphaR = $alpha*pi/180;

#image scale
$imgScale = 1;

#image aspect ratio
$width = $imgScale*620;
$height = $imgScale*362;

#computation
$omegaAC = $vB/(.15*sin($alphaR));
$vC = $omegaAC*sqrt(((.35*sin($alphaR))**2) + ((.2*cos($alphaR))**2));

#set tolerance
Context()->flags->set(
tolerance=>.01);

##############################################################
#
#  PGML 
#
#

BEGIN_PGML

	[@ image( "UBC-DYN-17-010.png", width=>[$width], height=>[$height]) @]*

	The horizontal control rod has a velocity of [`V_B = [$vB]`] [`m/s`]. Determine the absolute velocity of point [`C`] the instant [`\alpha=[$alpha]^{\circ}`].

	[`V_C=`] [______]{"$vC"} [`m/s`]  

END_PGML

##############################################################

ENDDOCUMENT();
