#image scale
$imgScale = .5;

#image aspect ratio
$width = $imgScale*1378;
$height = $imgScale*762;

loadMacros(   
	"PGstandard.pl",     # Standard macros for PG language
	"MathObjects.pl",
	"PGML.pl",
	"parserPopUp.pl",
	"parserMultiAnswer.pl",
