Context("Numeric");

#given
$f1 = random(30,40,1);
$f2 = random(60,70,1);
$d1 = random(30,40,1);
$d2 = random(50,60,1);
$d = random(3,5,1);
$theta = random(5,15,1);

#computation 
$fmd = $f1*$d1 + $f2*$d2;
$fm = $fmd/$d;

#set tolerance
Context()->flags->set(
tolerance=>.01);

