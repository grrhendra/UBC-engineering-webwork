Context("Numeric");

#given
$m = random(20,30,1);
$v = random(80,100,1);
$d = random(55,70,1);
$f = random(300,350,1);

#computation 
$ke = .5*$m*$v**2/1000;
$fave = $ke/$d*100;

#set tolerance
Context()->flags->set(
tolerance=>.01);

