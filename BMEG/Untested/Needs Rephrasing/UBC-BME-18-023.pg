Context("Numeric");

do{

	#given
	$vy = random(1,4,.1);
	$vx = random(5,9,.1);
	$t = random(.6,1.3,.01);
	$cog = random(.8,1.2,.01);

	#computation 
	$r = sqrt($vx**2 + $vy**2);
	$theta = 180/pi*arctan($vy/$vx);
	$vx2 = $vx;
	$dx = $t*$vx;
	$vy2 = $vy - 9.81*$t;
	$h = $cog + $vy**2/2/9.81;
	$h2 = $cog + $vy*$t - .5*9.81*$t*$t;

}while($h2 <= .2 or $h2 >= .8);

#set tolerance
Context()->flags->set(
tolerance=>.01);

