Context("Numeric");

#given
$mt = random(60,70,.1);
$mn = random(50,60,.1);
$f = random(1000,2000,10);
$vt = random(4,8,.1);
$vn = -random(6,10,.1);

#computation 
$at = -$f/$mt;
$an = $f/$mn;
$v = ($mt*$vt+$mn*$vn)/($mn+$mt);

#set tolerance
Context()->flags->set(
tolerance=>.01);

