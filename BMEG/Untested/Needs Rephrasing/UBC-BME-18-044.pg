Context("Numeric");

#given
$d = random(7,10,.1);
$dm = $d/100;
$theta = random(30,40,1);
$thetar = $theta*pi/180;
$t = random(200,400,1);

#computation 
$fp = $t/(sin($thetar)*$dm);

#set tolerance
Context()->flags->set(
tolerance=>.01);

