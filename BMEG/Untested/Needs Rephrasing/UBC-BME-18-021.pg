Context("Numeric");

do{

	#given
	$t = random(.75,2,.01);
	$s = random(35,45,1);
	$v = random(35,35,1);
	$a = random(.25,.75,.01);

	#computation 
	$d = $s - ($v*$t - .5*$a*$t**2);

}while($d <= -1);

$mc1 = PopUp(["?","1","2"], "1");
$mc2 = PopUp(["?","1","2"], "2");

$d = Formula($d);

if ($d <= 0) {
	$mcCorrect = $mc2;
}
else { 
	$mcCorrect = $mc1;
}

#set tolerance
Context()->flags->set(
tolerance=>.01);

