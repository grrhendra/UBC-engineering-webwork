Context("Numeric");

#given
$v = random(7,10,.1);
$m = random(40,60,1);
$cog = random(.75,1.25,.01);

#computation 
$h = $cog+ $v*$v/2/9.81;

#set tolerance
Context()->flags->set(
tolerance=>.01);

