Context("Numeric");

#given
$hc = random(2,3,.01);
$v = random(4,6,.01);
$cog = random(1,1.5,.01);

#computation 
$ay = -9.81;
$t = $v/9.81;
$h = $cog + $v*$t - .5*9.81*$t*$t;

#set tolerance
Context()->flags->set(
tolerance=>.01);

