#
#  Setup
#
#

Context("Numeric");
do{

	#given
	$v = random(40,60,1);
	$omega = random(100,150);
	$d = random(30,45,1);
	$m = random(130,180,1);

	#computation 
	$v2 = $omega*$d/100;
	$p = $v2/$v*100;
	$a = $omega**2*$d/100;
	$f = $m/1000*$a;

}while($p > 95 or $p < 75);

#set tolerance
Context()->flags->set(
tolerance=>.01);

