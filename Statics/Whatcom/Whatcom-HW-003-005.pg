Context("Numeric");

#given
$W1 = random(12,15,.1);
$W2 = $W1+random(3,6,.1);
$W3 = 0.8*$W1;
$a = random(4,8,0.1);
$b = $a*random(1.2,1.9,0.05);
$c = $a*random(0.75,1.25,0.05);

#computation 
$FR1 = 0.5*$W1*$a;
$x1 = 2*$a/3;
$FR2 = $b/2*($W1+$W2);
$x2 = $a+$b**2/(6*$FR2)*($W1+2*$W2);
$FR3 = $c*$W3;
$x3 = $a+$b+$c/2;

#set tolerance
Context()->flags->set(
tolerance=>.01);

