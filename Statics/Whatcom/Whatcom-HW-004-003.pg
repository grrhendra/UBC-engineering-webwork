The maximum reaction force occurs at [@ $mcCorrect->menu() @]*

[`F_{max}=`] [_____] [`N`]  

[`\vec{\mathbf{R}}_{upper}=`] [`(`][_____][`\hat{i}`] [`+`] [_____][`\hat{j})`] [`N`]  
[`\vec{\mathbf{R}}_{lower}=`] [`(`][_____][`\hat{i}`] [`+`] [_____][`\hat{j})`] [`N`]  

END_PGML

ANS($mcCorrect->cmp);
ANS($Fmax->cmp);
ANS($TopX->cmp);
ANS($TopY->cmp);
ANS($BottomX->cmp);
ANS($BottomY->cmp);

