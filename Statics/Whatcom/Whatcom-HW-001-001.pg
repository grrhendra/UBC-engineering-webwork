Context("Numeric");

#given
$F = random(200,500,5);
$thetadeg = random(5,20,0.1);
$a = random(4,6,0.1);
$b = random(2,3,0.1);
$c = random(3,4,0.1);

#computation 
$theta = $thetadeg*pi/180;
$alpha = arctan($c/$b);
$beta = arctan($c/$a);
$F_AC = $F*(sin($theta)*tan($alpha)+cos($theta))/(tan($alpha)*cos($beta)+sin($beta));
$F_AB = ($F_AC*cos($beta)-$F*sin($theta))/cos($alpha);
$F_ACx = -$F_AC*cos($beta);
$F_ACy = $F_AC*sin($beta);
$F_ABx = $F_AB*cos($alpha);
$F_ABy = $F_AB*sin($alpha);

#set tolerance
Context()->flags->set(
tolerance=>.01);

