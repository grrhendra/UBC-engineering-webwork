Context("Numeric");

#given
$W = random(1600, 1800, 10);
$mu = random(0.6, 0.8, 0.02);
$a = random(7.5, 9, 0.05);
$b = $a*random(.3,.4,0.01);
$c = random(1.3,1.8,.02);

#computation 
$thetaRW = arctan($b/($a*(1/$mu-$c/$a)));
$thetadegRW = $thetaRW*180/pi;

$thetaFW = arctan(($mu*($a-$b))/($a+$c*$mu));
$thetadegFW = $thetaFW*180/pi;

$theta4W = arctan($mu);
$thetadeg4W = $theta4W*180/pi;

#set tolerance
Context()->flags->set(
tolerance=>.01);

