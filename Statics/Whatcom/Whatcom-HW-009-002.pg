#image scale
$imgScale = .7;

#image aspect ratio
$width = $imgScale*520;
$height = $imgScale*620;

loadMacros(   
	"PGstandard.pl",     # Standard macros for PG language
	"MathObjects.pl",
	"PGML.pl",
	"parserPopUp.pl",
	"parserMultiAnswer.pl",
